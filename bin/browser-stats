#!/usr/bin/env node

var Promise = require('bluebird');
var cli = require('../lib/cli');
var auth = require('../lib/auth');
var api = require('../lib/api');
var report = require('../lib/report');

Promise.bind({})
    .then(cli.getConfig)
    .then(auth.getAccessToken)
    .then(api.query)
    .then(report.output);
